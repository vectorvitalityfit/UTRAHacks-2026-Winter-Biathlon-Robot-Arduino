// MH Sensor Series Digital Output (DO)
int irAnalogPin = A0;
int irAnalogPin2 = A1;

void setup() {
  Serial.begin(9600);
}

void loop() {
  int value = analogRead(irAnalogPin); // 0â€“1023
  int value2 = analogRead(irAnalogPin2);

  Serial.println(value);
  Serial.println(value2);

  if (value < 105 && value2 < 105) {   // threshold (tune this!)
    Serial.println("White detected");
  } else {
    Serial.println("Black detected");
  }

  delay(100);
}
